<% if(errors.length > 0) { %>
    <div class="row-alerts">
      <div class="col">
        <div class="alert alert-danger_login">
            <% errors.forEach(erro => { %>
              <%= erro %><br>
          <% }); %>
        </div>
      </div>
    </div>
    <% } %>
    
    <% if(success.length > 0) { %>
      <div class="row-alerts">
        <div class="col">
          <div class="alert alert-success_login">
              <% success.forEach(success => { %>
                <%= success %><br>
            <% }); %>
          </div>
        </div>
      </div>
      <% } %>